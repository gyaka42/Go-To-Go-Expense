{
  "expo": {
    "name": "Go-To-Go Expense",
    "slug": "expense-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "backgroundColor": "#000000"
      }
    },
    "scheme": "expenseapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gyaka42.gotogoexpense",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "We gebruiken je camera om bonnen of afbeeldingen te uploaden.",
        "NSPhotoLibraryUsageDescription": "We hebben toegang tot je fotobibliotheek nodig om afbeeldingen te kiezen voor je profiel en wallets.",
        "NSPhotoLibraryAddUsageDescription": "We hebben toestemming nodig om afbeeldingen op te slaan die binnen de app worden gemaakt of bewerkt.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cbcf0f8a-631c-432f-b071-693ed78f57b3"
      }
    }
  }
}
